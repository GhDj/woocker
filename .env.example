# PHP Configuration
PHP_VERSION=8.1

# WordPress Configuration
WORDPRESS_VERSION=6.4
WORDPRESS_DEBUG=1
WORDPRESS_DEBUG_LOG=1
WORDPRESS_DEBUG_DISPLAY=0

# WooCommerce Configuration
WOOCOMMERCE_VERSION=8.5.2

# Storefront Theme
STOREFRONT_VERSION=4.5.5

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress

# Site Configuration
# You can use any hostname here (e.g., wooco.localhost, myshop.local, etc.)
# For *.localhost domains, no /etc/hosts entry is needed on most systems
WORDPRESS_HOSTNAME=wooco.localhost
WORDPRESS_PORT=8000

# WordPress Admin Configuration
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin123
WP_ADMIN_EMAIL=admin@example.local
WP_SITE_TITLE=WooCommerce Dev Site
WP_SITE_URL=http://wooco.localhost:8000

# Xdebug Configuration
XDEBUG_MODE=debug
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_IDE_KEY=PHPSTORM
